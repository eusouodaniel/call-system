{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Status por setor</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de Status por setor</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tipo de Atendimento</th>
                                    <th>Total Pendente</th>
                                    <th>Total FP</th>
                                    <th>Total Concluído</th>
                                    <th>% Concluído no prazo</th>
                                </tr>
                            </thead>
                            <tfoot>
                              <tr>
                                <td><b>Total Geral</b></td>
                                <td><b>{{totalPendent}}</b></td>
                                <td><b>{{totalFP}}</b></td>
                                <td><b>{{totalConcluded}}</b></td>
                                <td><b>{{totalConcludedOnTimePercent|number_format(2, ',', '.')}}%</td>
                              </tr>
                            </tfoot>
                            <tbody>
                              <tr>
                                <td>Comercial</td>
                                <td>{{pendentComercial}}</td>
                                <td>{{fpComercial}}</td>
                                <td>{{concludedComercial}}</td>
                                <td>{{concludedOnTimePercentComercial|number_format(2, ',', '.')}}%</td>
                              </tr>
                              <tr>
                                <td>Operação</td>
                                <td>{{pendentOperacao}}</td>
                                <td>{{fpOperacao}}</td>
                                <td>{{concludedOperacao}}</td>
                                <td>{{concludedOnTimePercentOperacao|number_format(2, ',', '.')}}%</td>
                              </tr>
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/app/js/vendor/moment-with-locales.js')}}"></script>
    <script src="{{asset('bundles/app/js/vendor/bootstrap-datetimepicker/bootstrap-datetimepicker.js')}}"></script>
    <script src="{{asset('bundles/app/js/custom/admin/script.js')}}"></script>
{% endblock %}
