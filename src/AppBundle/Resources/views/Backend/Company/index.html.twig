{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Empresas</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row ">
            <div class="col-xs-12 bs-50">
                <a href="{{ path('backend_company_new') }}" class="btn btn-success">Novo</a>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de Empresas</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Telefone</th>
                                    <th>CNPJ</th>
                                    <th>Endereço</th>
                                    <th>CEP</th>
                                    <th>UF</th>
                                    <th>E-mail</th>
                                    <th>Responsável</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.id }}</td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.telphone }}</td>
                                    <td>{{ entity.cnpj }}</td>
                                    <td>{{ entity.address }}</td>
                                    <td>{{ entity.cep }}</td>
                                    <td>{{ entity.uf }}</td>
                                    <td>{{ entity.email }}</td>
                                    <td>{{ entity.user }}</td>
                                    <td>
                                        <a href="javascript:void(0);" data-url="{{ path('backend_company_delete', { 'id': entity.id }) }}" class="btn btn-danger delete_item">Excluir</a>
                                        <a href="{{ path('backend_company_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
