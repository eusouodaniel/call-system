<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.name) }}
        <label for="client_name">Nome</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.last_name) }}
        <label for="user_name">Sobrenome</label>
        {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    {% if app.user and is_granted('ROLE_ADMIN') %}
    <div class="form-group">
        {{ form_errors(form.company) }}
        <label for="client_company">Empresa</label>
        {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
    </div>
    {% else %}
      {{ form_widget(form.company, {'attr': {'style': 'display:none'}}) }}
      <div class="form-group">
          <label>Empresa</label> - {{entity.company}}
      </div>
    {% endif %}

    <div class="form-group">
        {{ form_errors(form.phone) }}
        <label for="client_phone">Telefone</label>
        {{ form_widget(form.phone, {'attr': {'class': 'form-control telefone'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.email) }}
        <label for="client_email">E-mail</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    {% if not entity.id  %}
        <div class="form-group">
            <label for="client_pass">Senha</label>
            <input type="password" id="user_plainpassword" name="client_custom[plainPassword]" maxlength="255" class="form-control" required="required" autocomplete="off">
        </div>
    {% else %}
        <div class="form-group">
            <label for="client_pass">Senha</label>
            <input type="password" id="user_plainpassword" name="client_custom[plainPassword]" maxlength="255" class="form-control" autocomplete="off">
        </div>
    {% endif %}
</div><!-- /.box-body -->
