{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Editar</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Editar Comercial</h3>
                </div><!-- /.box-header -->
                <section class="content-header">
                    <ol class="breadcrumb">
                        <li><a href="{{ path('backend_comercial') }}"><i class="fa fa-dashboard"></i>Comercial</a></li>
                        <li class="active">Editar</li>
                    </ol>
                </section>
                <div class="box-body table-responsive no-padding">

                        <form class="" action="{{ path('backend_comercial_update',{'id': entity.id}) }}" method="post" {{ form_enctype(edit_form) }}>
                            <input type="hidden" name="_method" value="PUT" />
                            {{ form_widget(edit_form._token) }}

                            {% block messages %}
                                {{ parent() }}
                                {{ form_errors(edit_form) }}
                            {% endblock %}

                            {% include 'AppBundle:Backend/Comercial:form.html.twig' with {'form': edit_form} %}

                            <div class="box-footer">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                <a href="{{ path('backend_comercial') }}" class="btn btn-default">Voltar</a>
                            </div>

                        </form>

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->

{% endblock %}
