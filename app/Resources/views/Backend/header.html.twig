<header class="header">
    <a href="{{ path('backend_home') }}" class="logo">
        <!-- Add the class icon to your logo image or logo icon to add the margining -->
        Sistema de chamados
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-right">
            <ul class="nav navbar-nav">
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-user"></i>
                        <span> {{ app.user }} <i class="caret"></i></span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- Menu Footer-->
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                        <li class="user-footer">
                          <div class="pull-right">
                              <a href="{{ path('user_logout') }}" class="btn btn-default btn-flat">Logout</a>
                          </div>
                        </li>
                        {% elseif app.user and is_granted('ROLE_CLIENT')%}
                        <li class="user-footer">
                          <div class="pull-left">
                              <a href="{{ path('backend_client') }}" class="btn btn-default btn-flat">Meu cadastro</a>
                          </div>
                          <div class="pull-right">
                              <a href="{{ path('user_logout') }}" class="btn btn-default btn-flat">Logout</a>
                          </div>
                        </li>
                        {% elseif app.user and is_granted('ROLE_COMERCIAL')%}
                        <li class="user-footer">
                          <div class="pull-left">
                              <a href="{{ path('backend_comercial') }}" class="btn btn-default btn-flat">Meu cadastro</a>
                          </div>
                          <div class="pull-right">
                              <a href="{{ path('user_logout') }}" class="btn btn-default btn-flat">Logout</a>
                          </div>
                        </li>
                        {% endif %}
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    {% if app.session.flashBag.has('success') %}
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        {% for msg in app.session.flashBag.get('success') %}
            <strong>{{ msg }}</strong>
        {% endfor %}
    </div>
    {% endif %}

    {% if app.session.flashBag.has('info') %}
    <div class="alert alert-info">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        {% for msg in app.session.flashBag.get('info') %}
            <strong>{{ msg }}</strong>
        {% endfor %}
    </div>
    {% endif %}

    {% if app.session.flashBag.has('warning') %}
    <div class="alert alert-warning">
          <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
          {% for msg in app.session.flashBag.get('warning') %}
            <strong>{{ msg }}</strong>
           {% endfor %}
    </div>
    {% endif %}

    {% if app.session.flashBag.has('error') %}
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        {% for msg in app.session.flashBag.get('error') %}
             <strong>{{ msg }}</strong>
        {% endfor %}
    </div>
    {% endif %}
</header>
